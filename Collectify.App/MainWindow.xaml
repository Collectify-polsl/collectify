<Window x:Class="Collectify.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collectify.App"
        xmlns:vm="clr-namespace:Collectify.App.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Background="White">

        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDetailsViewVisible}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Button Width="180" Height="120" Margin="10" 
                    BorderThickness="0" Cursor="Hand"
                    Background="Transparent" 
                    HorizontalAlignment="Center"  
                    VerticalAlignment="Top" 
                    Command="{Binding CreateCollectionCommand}">
                <Border Background="#3F51B5" CornerRadius="20" Padding="10">
                    <TextBlock Text="Create collection" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Button>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0, 120, 0, 0">
                <ItemsControl ItemsSource="{Binding Collections}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="180" Height="120" Margin="10" 
                                    BorderThickness="0" Cursor="Hand" Background="Transparent"
                                    
                                    Command="{Binding DataContext.OpenCollectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">

                            <Border Background="#3F51B5" CornerRadius="10">
                                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#BBBBBB" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Visibility="{Binding IsDetailsViewVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">

            <local:SingleCollectionView DataContext="{Binding ActiveDetailsViewModel}"/>

        </Grid>

    </Grid>
</Window>